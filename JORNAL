#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()

{
	float A,B,C;
	cout<<"ingrese las horas trabajadas:";
	cin>>A;
	cout<<"Describa el tipo de trabajador, 1 para ingeniero , 0 para tecnico: ";
	cin>>B;
	if (B=1)
		{C=A*25;
	cout<<"El jornal a pagar al ingeniero es: "<<C;
	}
	else
		if (B=0)
		{C=A*5;
	cout<<"El jornal a pagar al tecnico es: "<<C;
	}
	getch ();
}
